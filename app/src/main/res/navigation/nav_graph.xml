<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/manageTeamspaceFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.baek.diract.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_projectListFragment"
            app:destination="@id/projectListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_manageTeamspaceFragment"
            app:destination="@id/manageTeamspaceFragment" />
        <!--
            TODO: 추후 네비게이션 home에서 연결할 때 주석 제거
        <action
            android:id="@+id/action_homeFragment_to_video_nav_graph"
            app:destination="@id/videoListFragment" />
        -->
    </fragment>
    <fragment
        android:id="@+id/manageTeamspaceFragment"
        android:name="com.baek.diract.presentation.home.ManageTeamspaceFragment"
        android:label="ManageTeamspaceFragment"
        tools:layout="@layout/fragment_manage_teamspace" />
    <fragment
        android:id="@+id/inboxFragment"
        android:name="com.baek.diract.presentation.inbox.InboxFragment"
        android:label="fragment_inbox"
        tools:layout="@layout/fragment_inbox" />
    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.baek.diract.presentation.mypage.MyPageFragment"
        android:label="fragment_my_page"
        tools:layout="@layout/fragment_my_page">
        <!--TODO: 추후 네비게이션 제대로 연결할 때 action -  myPageFragment_to_video_nav_graph 제거-->

        <action
            android:id="@+id/action_myPageFragment_to_video_nav_graph"
            app:destination="@id/video_nav_graph">
            <argument
                android:name="tracksId"
                app:argType="string" />
            <argument
                android:name="tracksTitle"
                app:argType="string" />
        </action>
    </fragment>

    <include app:graph="@navigation/video_nav_graph" />
</navigation>
