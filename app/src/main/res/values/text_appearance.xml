<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Title -->
    <style name="TextAppearance.App.Title1.Semibold">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="TextAppearance.App.Title2.Semibold">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <!-- Heading -->
    <style name="TextAppearance.App.Heading1.Semibold">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="TextAppearance.App.Heading1.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <!-- Headline -->
    <style name="TextAppearance.App.Headline1.Medium">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="TextAppearance.App.Headline2.Semibold">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="TextAppearance.App.Headline2.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <!-- Body -->
    <style name="TextAppearance.App.Body1.Medium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">16sp</item>
        <!-- 16sp * 1.6 = 25.6sp -->
        <item name="android:lineHeight">26sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <!-- Footnote -->
    <style name="TextAppearance.App.Footnote.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="TextAppearance.App.Footnote.Semibold">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <!-- Caption -->
    <style name="TextAppearance.App.Caption1.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

</resources>
